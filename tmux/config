# default statusbar colors
set-option -g status-style "fg=#e8e3e3,bg=#1f1f1f"

# default window title colors
set-window-option -g window-status-style "fg=#e8e3e3,bg=default"

# active window title colors
set-window-option -g window-status-current-style "fg=#d9bc8c,bg=default"

# pane border
set-option -g pane-border-style "fg=#1f1f1f"
set-option -g pane-active-border-style "fg=#282828"

# message text
set-option -g message-style "fg=#e8e3e3,bg=#1f1f1f"

# pane number display
set-option -g display-panes-active-colour "#8c977d"
set-option -g display-panes-colour "#d9bc8c"

# clock
set-window-option -g clock-mode-colour "#8c977d"

# copy mode highligh
set-window-option -g mode-style "fg=#e8e3e3,bg=#282828"

# bell
set-window-option -g window-status-bell-style "fg=#1f1f1f,bg=#b66467"
